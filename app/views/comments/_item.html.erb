<li class="media" id="comment-<%=comment.id%>">
  <div class="media-body">
    <div class="media">
      <div class="media-body" >
        <%= comment.content %>
        <br />
        <small class="text-muted"><%= comment.user.nickname %> | <%= comment.created_at.strftime("%Y. %m. %d. %l:%M%P") %></small>
        <%= link_to "삭제", comment_path(comment),
                            method: :delete,
                            remote: true,
                            data: {confirm: "정말로 삭제하시겠습니까?"} %>
      </div>
    </div>
  </div>
</li>
