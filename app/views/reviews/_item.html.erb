<li class="media" id="review-<%=review.id%>">
  <div class="media-body">
    <div class="media">
      <div class="media-body" >
        <%= review.content %>
        <br />
        <small class="text-muted"><%= review.user.nickname %> | <%= review.created_at.strftime("%Y. %m. %d. %l:%M%P") %></small>
        <%= link_to "삭제", review_path(review),
                            method: :delete,
                            remote: true,
                            data: {confirm: "정말로 삭제하시겠습니까?"} %>
      </div>
    </div>
  </div>
</li>
