				<a class="home-carousel-left" href="#home-carousel" data-slide="prev"><i class="fa fa-angle-left"></i></a>
				<a class="home-carousel-right" href="#home-carousel" data-slide="next"><i class="fa fa-angle-right"></i></a>
			</div>		
		</div> <!--/#home-carousel--> 
		<div class="container-fluid ">
			
		
          <div class="row">
         <% @infos.each do |info| %>
         <% if info.category == "place" %>
            <div class="col-lg-4 col-md-6 mb-4" style="padding-top: 50px;">
              <div class="card h-100">
               
                <a href="/infos/place_info_show/<%= info.id %>"><img class="card-img-top" src="<%= info.img %>" width="350" height="250" alt=""></a>
                <div class="card-body">
                  <h4 class="card-title">
                    <a href="#"><%= info.title %></a>
                  </h4>
                  <h5><%= info.addr %></h5>
                </div>
                <% if user_signed_in? %>
                  <div class="card-footer">
                    <!--<small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>-->
                    <!--<%= info.likes.size %> 명이 좋아합니다.-->
                    <% if current_user.is_like?(info) %>
                      <%= link_to image_tag("like2.gif" , :size => "150x40"), info_like_path(info), method: "post"  , data:{confirm: '즐겨찾기 해제되었습니다.'}%>
                    <% else %>
                      <%= link_to image_tag("unlike2.gif" , :size => "150x40"), info_like_path(info), method: "post" , data:{confirm: '즐겨찾기 추가되었습니다.'} %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
            <% end %>
        <% end %>


          </div>
          <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->
         <%= will_paginate @posts, :previous_label => image_tag("arrow-left.png"), :next_label => image_tag("arrow-right.png"), :class=>"small-font", :style => "font-size: 20px; text-align: center; margin-top: 50px; "; %>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->



    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

</html>
